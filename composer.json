{
  "name": "platformsh/typo3-platformsh-base",
  "license": "MIT",
  "type": "project",
  "description": "Platform.sh base for TYPO3 CMS",
  "authors": [
    {
      "name": "Johannes Goslar",
      "email": "johannes.goslar@dkd.de"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://composer.typo3.org/"
    }
  ],
  "require": {
    "php": "^7.2.0",
    "typo3/minimal": "^9.5",
    "typo3/cms-about": "^9.5",
    "typo3/cms-belog": "^9.5",
    "typo3/cms-beuser": "^9.5",
    "typo3/cms-felogin": "^9.5",
    "typo3/cms-filelist": "^9.5",
    "typo3/cms-fluid-styled-content": "^9.5",
    "typo3/cms-impexp": "^9.5",
    "typo3/cms-lowlevel": "^9.5",
    "typo3/cms-redirects": "^9.5",
    "typo3/cms-reports": "^9.5",
    "typo3/cms-rte-ckeditor": "^9.5",
    "typo3/cms-scheduler": "^9.5",
    "typo3/cms-seo": "^9.5",
    "typo3/cms-setup": "^9.5",
    "typo3/cms-sys-note": "^9.5",
    "typo3/cms-t3editor": "^9.5",
    "typo3/cms-tstemplate": "^9.5",
    "typo3/cms-viewpage": "^9.5",

    "typo3/cms-introduction": "^4.0.1",

    "helhum/typo3-console": "^5.0"
  },
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": "web"
    },
    "helhum/typo3-console": {
      "install-extension-dummy": false
    }
  },
  "scripts": {
    "typo3-setup": [
      "@php vendor/bin/typo3cms install:generatepackagestates"
    ],
    "post-update-cmd": [
      "@typo3-setup"
    ],
    "post-install-cmd": [
      "@typo3-setup"
    ]
  }
}
